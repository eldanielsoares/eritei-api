generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  level     Int        @default(1)
  UserCard  UserCard[]
  Match     Match[]

  @@map("users")
}

model Card {
  id          String     @id @default(uuid())
  categoryId  String
  description String
  image       String
  weight      Int
  shots       Int
  isFree      Boolean
  level       Int        @default(1)
  deckId      String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  UserCard    UserCard[]
  Category    Category   @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  Deck        Deck?      @relation(fields: [deckId], references: [id], onDelete: Cascade)

  @@map("cards")
}

model UserCard {
  id        String   @id @default(uuid())
  userId    String
  cardId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  card      Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  Deck      Deck?    @relation(fields: [deckId], references: [id])
  deckId    String?

  @@unique([userId, cardId])
  @@map("userCards")
}

model Category {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Card      Card[]

  @@map("categories")
}

model Deck {
  id        String     @id @default(uuid())
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Card      Card[]
  UserCard  UserCard[]

  @@map("decks")
}

model Match {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  shots     Int      @default(0)
  cheapId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("matches")
}
