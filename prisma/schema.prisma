generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  UserCard  UserCard[]

  @@map("users")
}

model Card {
  id          String     @id @default(uuid())
  categoryId  String
  description String
  shots       Int
  image       String
  weight      Int
  cheap       String
  isFree      Boolean
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  UserCard    UserCard[]
  Category    Category   @relation(fields: [categoryId], references: [id])

  @@map("cards")
}

model UserCard {
  id        String   @id @default(uuid())
  userId    String
  cardId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  card      Card     @relation(fields: [cardId], references: [id])

  @@unique([userId, cardId])
  @@map("userCards")
}

model Category {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Card      Card[]

  @@map("categories")
}
